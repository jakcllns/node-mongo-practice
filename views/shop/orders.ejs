<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (orders.length <= 0) { %>
            <h1>Nothing there</h1>
        <% } else { %>
            <ul>
                <% orders.forEach(order => { %>
                    <li>
                        <h1># <%= order.id %></h1>
                        <ul>
                            <% order.products.forEach(item => { %>
                                <li>
                                    <p><%= item.title %></p>
                                    <p><strong>Quantity: </strong><%= item.orderItem.quantity%></p>
                                </li>
                            <% }); %>
                        </ul>
                    </li>
                <% }); %>
            </ul>
        <% } %>
        
    </main>
    <%- include('../includes/end.ejs') %>